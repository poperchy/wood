<div class="form__wrap form__wrap--contacts">
    <div class="form__container-wrap">
        <form action="#" class="form {{ mod }}">
            <div class="form__checkbox form__contacts">
                <label>
                    <input type="text" placeholder="Имя">
                </label>
                <label>
                    <input class="t" type="tel" id="pattern-phone-mask" placeholder="Телефон">
                </label>
                <label>
                    <input type="email" placeholder="E-mail">
                </label>
                <div class="textarea__wrap">
                    <textarea name="" cols="30" rows="7" placeholder="Напишите сообщение..."></textarea>
                    <a href="#" class="form__file-reset">×</a>
                    <label class="form__label-file"><span class="form__file-text"></span>
                        <input type="file" class="form__input-file" id="first" name="first[]" multiple>
                    </label>
                </div>
            </div>
            <div class="form__question-btn form__contacts-btn">
                <button class="btn btn-link--brown">Отправить</button>
            </div>
        </form>
    </div>
</div>