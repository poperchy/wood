<picture {% if class %} class="{{ class }}" {% endif %}>
    {% if responsive and mobile_src %}
        <source media="(max-width: 671px)"
                srcset="{{ mobile_src }} 1x, {{ mobile_src | replace({'.' : '@2x.'}) }}">
    {% endif %}

    {% if responsive and tablet_src %}
        <source media="(min-width: 768px) and (max-width: 1100px)"
                srcset="{{ tablet_src }} 1x, {{ tablet_src | replace({'.' : '@2x.'}) }}">
    {% endif %}

    {% if responsive and src %}
        <source media="(min-width: 961px)"
                srcset="{{ src }} 1x, {{ src | replace({'.' : '@2x.'}) }}">
    {% endif %}

    <img {% if img_class %} class="{{ img_class }} {% endif %}"
                            src="{{ src }}"
                            srcset="{{ src }} 1x, {{ src | replace({'.' : '@2x'}) }}"
            {% if title %} alt="{{ title }} {% endif %}">
</picture>