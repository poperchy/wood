    </section>
    {% include 'components/section-title.twig' with
        {
            title : 'следите за нами в instagram',
            mod : 'section-title--cost',
        } %}
    <div class="watch-inst">
        <div class="container">
            <div class="watch-inst__wrap">
                <div class="watch-inst__inst">
                    <a href="#">@torwood.by</a>
                </div>

                <div class="watch-inst__list">
                    <div class="watch-inst__item">
                        <a data-fancybox="images-inst" href="../images/insta/1.jpg"><img src="../images/insta/1.jpg" alt=""></a>
