                    </div>
                    <div class="watch-inst__item">
                        <a data-fancybox="images-inst" href="../images/insta/3.jpg"><img src="../images/insta/3.jpg" alt=""></a>
                    </div>
                    <div class="watch-inst__item">
                        <a data-fancybox="images-inst" href="../images/insta/4.jpg"><img src="../images/insta/4.jpg" alt=""></a>
                    </div>
                    <div class="watch-inst__item">
                        <a data-fancybox="images-inst" href="../images/insta/5.jpg"><img src="../images/insta/5.jpg" alt=""></a>
                    </div>
                </div>
                <div class="watch-inst__btn">
                    <a href="#" class="btn btn-link--white">В instagram</a>
                </div>
            </div>
        </div>
    </div>
    <div class="social-links__wrap social-links__wrap--product-catalog">
        {% include 'components/social-links.twig' with
            {
                'socialList' : [
                {
                    'caption' : 'telegram',
                    'modifier' : 'social-links__link--tg',
                },
                {
                    'caption' : 'instagram',
                    'modifier' : 'social-links__link--inst',
                },
                {
                    'caption' : 'vk',
                    'modifier' : 'social-links__link--vk',
                },
                {
                    'caption' : 'youtube',
                    'modifier' : 'social-links__link--youtube',
                },
                {
                    'caption' : 'calculator',
                    'modifier' : 'social-links__link--calculator',
                    'modItem' : 'social-links__item--calculator',
                },
            ],
            } %}
    </div>

{% endblock %}